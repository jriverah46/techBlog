# Puerto de la aplicación
PORT=3000

# Configuración de PostgreSQL
# Ajusta estos valores según tu configuración local de PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_contraseña_postgres
DB_NAME=blog
DB_SYNC=true
DB_LOGGING=false

# Configuración de JWT
# IMPORTANTE: Genera un secreto seguro y único para producción
# Puedes usar: openssl rand -base64 32
JWT_SECRET=tu_secreto_jwt_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN_SECONDS=86400
